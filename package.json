{
  "name": "@yikesable/fastify-enforce-host",
  "version": "0.1.0",
  "description": "Enforce a specific host name for your Fastify app",
  "homepage": "http://github.com/yikesable/fastify-enforce-host",
  "repository": {
    "type": "git",
    "url": "git://github.com/yikesable/fastify-enforce-host.git"
  },
  "keywords": [
    "fastify",
    "fastify-plugin"
  ],
  "author": "Pelle Wessman <pelle@yikesable.dev> (https://yikesable.dev/)",
  "license": "MIT",
  "engines": {
    "node": "^20.9.0 || >=21.1.0"
  },
  "type": "module",
  "exports": "./index.js",
  "types": "index.d.ts",
  "files": [
    "/index.js",
    "/index.d.ts",
    "/index.d.ts.map",
    "lib/*.js",
    "lib/*.d.ts",
    "lib/*.d.ts.map"
  ],
  "scripts": {
    "build:0": "run-s clean",
    "build:1-declaration": "tsc -p declaration.tsconfig.json",
    "build": "run-s build:*",
    "check:installed-check": "installed-check",
    "check:knip": "knip",
    "check:lint": "eslint --report-unused-disable-directives .",
    "check:tsc": "tsc",
    "check:type-coverage": "type-coverage --detail --strict --at-least 99 --ignore-files 'test/*'",
    "check": "run-s clean && run-p check:*",
    "clean:declarations": "rm -rf $(find . -maxdepth 2 -type f -name '*.d.ts*' ! -name 'advanced-types.d.ts')",
    "clean": "run-p clean:*",
    "prepare": "husky",
    "prepublishOnly": "run-s build",
    "test:mocha": "c8 --reporter=lcov --reporter text mocha 'test/**/*.spec.js'",
    "test-ci": "run-s test:*",
    "test": "run-s check test:*"
  },
  "devDependencies": {
    "@types/chai": "^4.3.17",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.15",
    "@voxpelli/eslint-config": "^20.0.1",
    "@voxpelli/tsconfig": "^8.0.0",
    "c8": "^10.1.2",
    "chai": "^4.5.0",
    "eslint": "^9.9.0",
    "fastify": "^4.18.0",
    "husky": "^9.1.4",
    "installed-check": "^9.3.0",
    "knip": "^5.27.2",
    "mocha": "^10.7.3",
    "npm-run-all2": "^6.2.2",
    "type-coverage": "^2.26.0",
    "typescript": "~5.1.3"
  },
  "dependencies": {
    "fastify-plugin": "^4.5.0"
  }
}
